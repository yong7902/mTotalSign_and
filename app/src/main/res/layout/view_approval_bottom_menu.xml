<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_bottom_txt"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_cjk_kr_regular"
            android:includeFontPadding="false"
            android:text="@string/txt_approval_db_approval"
            android:textColor="#ff0000"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/btn_bottom_menu_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_bottom_menu_icon_1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:background="@drawable/menu_icon_01" />

            <TextView
                android:id="@+id/tv_bottom_menu_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/noto_sans_cjk_kr_regular"
                android:includeFontPadding="false"
                android:text="부결"
                android:textColor="@color/black_3"
                android:textSize="12dp" />

            <View
                android:id="@+id/iv_bottom_menu_div_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_bottom_menu_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_bottom_menu_icon_2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
