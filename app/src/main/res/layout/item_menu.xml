<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/item_menu_sub_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:minWidth="92dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/layoutEnd_14"
            android:paddingTop="9dp"
            android:paddingBottom="@dimen/layoutBottom_13">

            <TextView
                android:id="@+id/item_menu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="미처리함"
                android:textColor="@drawable/color_tab_text_select"
                android:textSize="14dp" />

            <Button
                android:id="@+id/item_menu_countBtn"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/drw_red_circle"
                android:stateListAnimator="@null"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="11dp"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>